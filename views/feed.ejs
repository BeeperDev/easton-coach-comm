  <div class="container">
    <div class="row justify-content-center mt-5">
      <ul class="row list-unstyled">
        <% for(var i=0; i<posts.length; i++) {%> <!--makes an li for each post in db-->
          <li class="col-6 justify-content-between mt-5">
            <a href="/post/<%= posts[i]._id%>"> <!-- grab teh post._id from db-->
              <img class="img-fluid" src="<%= posts[i].image%>"> <!--grab the post.image (url)-->
            </a>
          </li>
        <% } %>
        </ul>
    </div>
  </div>  
